# Federated Learning Configuration
# Copy this file to .env and update with your values

# ============================================
# FL SERVER CONFIGURATION
# ============================================
FL_SERVER_HOST=192.168.1.36 # IP address of FL server laptop
FL_SERVER_PORT=5000            # Port for FL server

# ============================================
# CLIENT CONFIGURATION
# ============================================
CLIENT_ID=hospital_m1_mac      # Unique identifier for this client
CLIENT_NAME=Hospital A         # Human-readable name

# ============================================
# MODEL CONFIGURATION
# ============================================
BASE_MODEL_PATH=models/mobilenetv2_oral_cancer_best.h5
LOCAL_DATASET_PATH=../new_data

# ============================================
# TRAINING CONFIGURATION
# ============================================
BATCH_SIZE=32
IMG_SIZE=224
EPOCHS=30
LEARNING_RATE=0.00001

# ============================================
# FL SETTINGS
# ============================================
# Send full weights (True) or only deltas (False)
SEND_FULL_WEIGHTS=False

# Server API endpoints
FL_UPLOAD_ENDPOINT=/api/upload_weights
FL_DOWNLOAD_ENDPOINT=/api/download_global_model
FL_STATUS_ENDPOINT=/api/status
