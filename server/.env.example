# Federated Learning Server Configuration

# ============================================
# SERVER SETTINGS
# ============================================
FL_SERVER_HOST=0.0.0.0  # Listen on all interfaces (for network access)
FL_SERVER_PORT=5000

# ============================================
# MODEL SETTINGS
# ============================================
# Path to the initial base model (copy your mobilenetv2_oral_cancer_best.h5 here)
BASE_MODEL_PATH=models/global_model.h5
GLOBAL_MODEL_PATH=models/global_model_latest.h5

# ============================================
# AGGREGATION SETTINGS
# ============================================
# Minimum number of clients before aggregation
AGGREGATION_THRESHOLD=2

# ============================================
# VALIDATION SETTINGS
# ============================================
# Path to validation dataset (should contain test/ subfolder with class subfolders)
VALIDATION_DATASET_PATH=../new_data

# Whether to validate new model before replacing old one
# If True, new model will only be saved if accuracy improves
VALIDATE_BEFORE_REPLACE=True

# ============================================
# FLASK SETTINGS
# ============================================
FLASK_DEBUG=False
FLASK_ENV=production
